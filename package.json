{
  "name": "@antfu/ni",
  "version": "0.3.0",
  "description": "Use the right package manager",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "bin": {
    "ni": "bin/ni.js",
    "nci": "bin/nci.js",
    "nr": "bin/nr.js",
    "nu": "bin/nu.js"
  },
  "bugs": {
    "url": "https://github.com/antfu/ni/issues"
  },
  "homepage": "https://github.com/antfu/ni#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/ni.git"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "prepublishOnly": "rimraf dist && npm run build",
    "watch": "npm run build -- --watch",
    "ni": "esno src/ni.ts",
    "nci": "esno src/nci.ts",
    "nr": "esno src/nr.ts",
    "nu": "esno src/nu.ts",
    "dev": "esno src/ni.ts",
    "build": "tsup src/ni.ts src/nci.ts src/nr.ts --format cjs,esm --dts",
    "release": "npx bumpp --commit --push --tag && npm publish --access public",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "c8 ava"
  },
  "dependencies": {
    "find-up": "^5.0.0",
    "ini": "^1.3.8",
    "inquirer": "^7.3.3",
    "terminal-link": "^2.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.4.3",
    "@types/ini": "^1.3.30",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.20",
    "ava": "^3.15.0",
    "c8": "^7.4.0",
    "esbuild-register": "^1.2.1",
    "eslint": "^7.17.0",
    "esm": "^3.2.25",
    "esno": "^0.2.4",
    "rimraf": "^3.0.2",
    "tsup": "^3.11.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-ts"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "esbuild-register"
    ]
  }
}
